{
    "manifest_version": 3,
    "name": "Swipe Fake",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/fake_swipe16.png",
            "32": "/images/fake_swipe32.png",
            "48": "/images/fake_swipe48.png",
            "128": "/images/fake_swipe128.png"
        }
    },
    "icons": {
        "16": "/images/fake_swipe16.png",
        "32": "/images/fake_swipe32.png",
        "48": "/images/fake_swipe48.png",
        "128": "/images/fake_swipe128.png"
    },
    "options_page": "options.html"
}
